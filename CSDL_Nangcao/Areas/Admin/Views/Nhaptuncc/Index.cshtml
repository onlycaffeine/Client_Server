@using PagedList.Mvc;
@using Model1
@model  ModelCollection


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <b class="panel-heading" style="color:blue; font-size:x-large">
        Nhập từ nhà cung cấp
    </b>
}

<div class="row">
    <div class="col-lg-offset-1" style="padding:10px">
        <div class="panel-heading" style="color:blue; font-size:large">
            Danh sách phiếu đã nhập
        </div>
        <hr />

        @{
            DateTime date;
            date = DateTime.Today;
        }

        <div class="panel-body">
            @using (Html.BeginForm("Index", "Nhaptuncc", FormMethod.Get))
            {
                <div class="form-group">
                    <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                        Mã: @Html.TextBox("SearchString", null, new { @style = " height:35px; width:174px; margin:0 0 10px 10px", @class = "form-control" })
                        <p><button type="submit" class="btn btn-primary" style=" margin:0 0 0 30px">Tìm kiếm</button></p>
                    </div>

                    <div>

                    </div>

                    <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                        Thời gian:
                        <input type="datetime" value="@Html.Raw(date)" class="form-control" style="width:105px; margin:0 8px" name="a" />
                        Đến
                        <input type="datetime" value="@Html.Raw(date)" class="form-control" style="width:105px; margin:0 8px" name="b" />
                    </div>
                </div>
            }

            <hr />

            @if (Model.HoadonnhapDTOs.Count() > 0)
            {

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Ngày nhập</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.HoadonnhapDTOs)
                            {
                                <tr id="row_@item.Diadiem">
                                    <td>@item.Sohoadon</td>
                                    <td>@item.Ngaynhap</td>
                                    <td>
                                        <a href="/Admin/Nhaptuncc/Edithd/@item.Sohoadon">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Deletehd", new { @id = item.Sohoadon }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Sohoadon + "').remove()",
                                       HttpMethod = "Delete"
                                   })|
                                        <a href="/Admin/Nhaptuncc/Detailhd/@item.Sohoadon">Chi tiết</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Ngày nhập</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="alert alert-danger" style="width:210px">Không tìm thấy dữ liệu</div>
            }

        </div>
    </div>



    <div class="col-lg-pull-3" style="padding:10px">

        <div class="section group">
            <div class="col-md-12">
                @using (Html.BeginForm("Payment", "Nhaptuncc", FormMethod.Post))
                {
                    <div class="panel-heading" style="color:blue; font-size:large">
                        Thông tin chi tiết phiếu nhập
                        <button type="submit" class="btn btn-primary" style=" margin:0 0 0 36px">Thêm phiếu</button>
                    </div>
                    <hr />

                    <div class="form-group" style="">
                        <div class="form-group" style="display: flex ;  width:100%;align-items:center">

                            <label style=" box-sizing:border-box; flex-wrap:nowrap">Mã phiếu nhập</label>
                            <p><input name="maphieu" class="form-control" style="width:200px;margin:0 16px" /></p>

                            <label style="">Đơn vị nhập</label>
                            <p>@Html.DropDownList("ncc", null, new { @style = "width:200px; margin:0 16px", @class = "form-control", @name = "ncc" })</p>
                        </div>
                        <div class="form-group" style="display: flex ;  width:100%;align-items:center">

                            <label>Nguồn</label>
                            <p>@Html.DropDownList("nguon", null, new { @style = "width:100px; margin:0 16px", @class = "form-control", @name = "nguon" })</p>

                            <label>Kho</label>
                            <p>@Html.DropDownList("kho", null, new { @style = "width:200px; margin:0 16px", @class = "form-control", @name = "kho" })</p>

                            <label>Ngày nhập</label>
                            <p><input type="datetime" name="ngaynhap" value="@Html.Raw(date)" class="form-control" style="width:105px; margin:0 16px" /></p>
                        </div>

                    </div>

                }
            </div>

        </div>

        <hr />

        <div class="section group" style="display:contents">
            <b class="panel-heading" style="color:black; font-size:large">
                Danh sách vaccine/ Vật tư
                <a class="btn btn-primary" href="/Admin/Nhaptuncc/Create" style=" margin:0 0 0 36px">Thêm</a>
            </b>
            <hr />
            @if (Model.LoDTOs.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã lô</th>
                                <th>Số liều</th>
                                <th>Số lượng nhập</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LoDTOs)
                            {
                                <tr>
                                    <td>@item.Malo</td>
                                    <td>@item.Solieutrenmotcai.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@item.SLnhap.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@item.Dongia.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@((item.Dongia.GetValueOrDefault(0) * item.SLnhap.GetValueOrDefault(0)).ToString("N0"))</td>
                                    <td>
                                        <a href="/Admin/Nhaptuncc/Edit/@item.Malo">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.Malo }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Malo + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã lô</th>
                                <th>Số liều</th>
                                <th>Số lượng nhập</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="alert alert-danger" style="width:210px">Không tìm thấy dữ liệu</div>
            }

        </div>

    </div>
</div>


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@section jsfooter{
    <script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yyyy/mm/dd"
            });
        });
    </script>

}

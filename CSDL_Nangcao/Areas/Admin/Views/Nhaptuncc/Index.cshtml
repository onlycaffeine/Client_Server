@using PagedList.Mvc;
@using Model1
@model  ModelCollection


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/thuan-main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
    <style>
        .table-responsive {
            height: 202px;
        }
    </style>

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <b class="panel-heading" style="color:black; font-size:x-large">
        Nhập từ nhà cung cấp
    </b>
}

@section jsfooter{
    <script src="~/Assets/Admin/js/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/Admin/css/lib/combobox.js"></script>
    <script src="~/Assets/Admin/js/controller/nhaptuncc.js"></script>
    <script>
        document.getElementById('nsx').value = "2000-08-13";
        document.getElementById('hsd').value = "2000-08-13";</script>
    
}
<head>
</head>

<body>
    <div class="row">

        <div class="col-lg-offset-1 thuan-body-content" style="margin-right: 10px;height: 485px">
            <hr style=" margin-top: 55px" />
            @{
                DateTime date = DateTime.Today;
                DateTime datedefault = Convert.ToDateTime("08/13/2000");
                string dateformated = date.Day.ToString() + "/" + date.Month.ToString() + "/" + date.Year.ToString();
            }

            <div class="panel-body">

                @using (Html.BeginForm("Index", "Nhaptuncc", FormMethod.Get))
                {
                    <div class="form-group">

                        <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                            Từ
                            <input type="date" value="@Html.Raw(date)" class="form-control" style="width:138px; margin:0 8px" name="a" />
                            @*<input type="datetime" value="@Html.Raw(date)" class="form-control" style="width:105px; margin:0 8px" name="a" />*@
                            Đến
                            <input type="date" value="@Html.Raw(date)" class="form-control" style="width:138px; margin:0 8px" name="b" />
                        </div>

                        <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                            @Html.TextBox("SearchString", null, new { @style = " height:38px; width:184px; margin:0 0 0px 26px", @class = "form-control", @placeholder = "Tìm kiếm phiếu nhập" })
                            <p>
                                <button title="Tìm kiếm" class="btn" type="submit" style="color:white; background-color:royalblue; margin-left:10px; margin-top:18px"><i class="fas fa-search" style="margin-right:0px"></i></button>
                            </p>
                        </div>
                    </div>
                }

                <hr style="margin-top:-2px" />
                <b class="panel-heading" style="color:coral; font-size:medium">
                    Danh sách phiếu đã nhập
                </b>
                <hr style="margin-top:15px;margin-bottom: unset" />
                @if (Model.HoadonnhapDTOs.Count() > 0)
                {

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Ngày nhập</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.HoadonnhapDTOs)
                                {
                                    <tr id="row_@item.Sohoadon">
                                        @{DateTime a = @item.Ngaynhap;
                                            string b = a.Day.ToString() + "/" + a.Month.ToString() + "/" + a.Year.ToString();
                                        }
                                        <td>@item.Sohoadon</td>
                                        <td style="width: 98px">@Html.Raw(b)</td>
                                        <td style="text-align: center">
                                            <a title="Cập nhật" href="/Admin/Nhaptuncc/Edithd/@item.Sohoadon"><i class="fas fa-pen" style="margin-right:5px"></i></a>|
                                            @Ajax.ActionLink(" ", "Deletehd", new { @id = item.Sohoadon }, new AjaxOptions
                                            { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Sohoadon + "').remove()", },
                                            new { @class = "fas fa-trash", @title = "Xóa" })
                                            |<a title="Chi tiết" href="/Admin/Nhaptuncc/Detailhd/@item.Sohoadon"><i class="fas fa-info-circle" style="margin-left:5px"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Ngày nhập</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-danger" style="width:210px; margin-top: -160px">Không tìm thấy dữ liệu</div>
                }
            </div>
        </div>

        <div class="col-lg-pull-3 thuan-body-content" style="height:485px">

            <div class="section group">
                <div class="col-md-12">
                    @using (Html.BeginForm("Payment", "Nhaptuncc", FormMethod.Post))
                    {
                        <div class="panel-heading" style="color:coral; font-weight:bold; font-size:large">
                            Thông tin phiếu nhập
                            <a id="btnAddEmployee" title="Thêm lô" class="btn btn-primary" style=" margin:0 0 0 16px">
                                <i class="fas fa-plus"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Thêm lô nhập</b>
                            </a>
                            <button title="Thêm phiếu" type="submit" class="btn btn-primary" style=" margin:0 0 0 6px">
                                <i class="fas fa-save"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Lưu</b>
                            </button>
                        </div>
                        <hr />

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">

                                <label style=" box-sizing:border-box; flex-wrap:nowrap">Mã phiếu nhập</label>
                                <p><input value="@ViewBag.mahoadonauto" name="maphieu" class="form-control" style="width:200px;margin:0 16px" readonly /></p>

                                <label style="">Đơn vị nhập</label>
                                <p>@Html.DropDownList("ncc", null, new { @style = "width:200px; margin:0 16px", @class = "form-control", @name = "ncc" })</p>
                            </div>
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">

                                <label>Nguồn</label>
                                <p>@Html.DropDownList("nguon", null, new { @style = "width:100px; margin:0 16px", @class = "form-control", @name = "nguon" })</p>

                                <label>Kho</label>
                                <p>@Html.DropDownList("kho", null, new { @style = "width:200px; margin:0 16px", @class = "form-control", @name = "kho" })</p>

                                <label>Ngày nhập</label>
                                <p><input type="text" value="@Html.Raw(dateformated)" class="form-control" style="width:105px; margin:0 16px" readonly /></p>
                            </div>

                        </div>

                    }
                </div>

            </div>

            <hr />

            <div class="section group" style="display:contents">
                <b class="panel-default" style="color: coral; font-size: medium">
                    Danh sách vaccine/ Vật tư nhập

                </b>
                <hr style="margin-bottom: unset;" />
                @if (Model.LoDTOs.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên vật tư</th>
                                    <th>Mã lô</th>
                                    <th>Số lượng nhập</th>
                                    <th>Đơn giá</th>
                                    <th>Hạn sử dụng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="my_table">
                                @foreach (var item in Model.LoDTOs)
                                {

                                    if (item.HSD < DateTime.Now)
                                    {
                                        <tr id="row_@item.Malo" class="red-row">
                                            @{DateTime a = @item.HSD;
                                                string b = a.Day.ToString() + "/" + a.Month.ToString() + "/" + a.Year.ToString();
                                            }
                                            <td>@item.Tenvattu</td>
                                            <td>@item.Malo</td>
                                            <td style="text-align: center">@item.SLnhap.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@item.Dongia.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@Html.Raw(b)</td>
                                            <td style="text-align: center">
                                                <a title="Cập nhật" href="/Admin/Nhaptuncc/Edit/@item.Malo"><i class="fas fa-pen" style="margin-right:5px"></i></a>|
                                                @Ajax.ActionLink(" ", "Delete", new { @id = item.Malo }, new AjaxOptions
                                                { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Malo + "').remove()", },
                                                new { @class = "fas fa-trash", @title = "Xóa" })
                                            </td>
                                        </tr>
                                    }

                                    else if ((item.HSD - DateTime.Now).TotalDays < 31)
                                    {
                                        <tr id="row_@item.Malo" class="yellow-row">
                                            @{DateTime a = @item.HSD;
                                                string b = a.Day.ToString() + "/" + a.Month.ToString() + "/" + a.Year.ToString();
                                            }
                                            <td>@item.Tenvattu</td>
                                            <td>@item.Malo</td>
                                            <td style="text-align: center">@item.SLnhap.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@item.Dongia.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@Html.Raw(b)</td>
                                            <td style="text-align: center">
                                                <a title="Cập nhật" href="/Admin/Nhaptuncc/Edit/@item.Malo"><i class="fas fa-pen" style="margin-right:5px"></i></a>|
                                                @Ajax.ActionLink(" ", "Delete", new { @id = item.Malo }, new AjaxOptions
                                                { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Malo + "').remove()", },
                                                new { @class = "fas fa-trash", @title = "Xóa" })
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr id="row_@item.Malo" class="2">
                                            @{DateTime a = @item.HSD;
                                                string b = a.Day.ToString() + "/" + a.Month.ToString() + "/" + a.Year.ToString();
                                            }
                                            <td>@item.Tenvattu</td>
                                            <td>@item.Malo</td>
                                            <td style="text-align: center">@item.SLnhap.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@item.Dongia.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@Html.Raw(b)</td>
                                            <td style="text-align: center">
                                                <a title="Cập nhật" href="/Admin/Nhaptuncc/Edit/@item.Malo"><i class="fas fa-pen" style="margin-right:5px"></i></a>|
                                                @Ajax.ActionLink(" ", "Delete", new { @id = item.Malo }, new AjaxOptions
                                                { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Malo + "').remove()", },
                                                new { @class = "fas fa-trash", @title = "Xóa" })
                                            </td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên vật tư</th>
                                    <th>Mã lô</th>
                                    <th>Số lượng nhập</th>
                                    <th>Đơn giá</th>
                                    <th>Hạn sử dụng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-warning" style="width:180px ;margin-top: -150px">Chưa có dữ liệu</div>
                }

            </div>

        </div>
    </div>

    <div id="dlgPopup" class="m-dialog">
        <div class="m-row">
            <div class="m-popup" style="height: 400px; width: 931px ">
                <div class="m-popup-header">
                    <div class="m-popup-header-title">Đóng Form thông tin chung</div>
                    <div id="btnCloseDialog" class="m-popup-close"><i class="fas fa-times"></i></div>
                    <hr />
                </div>
                <div class="m-popup-content">
                    @using (Html.BeginForm("Create", "Nhaptuncc", FormMethod.Post, new { style = " width: 931px" }))
                    {
                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Mã lô:</label>
                                <p><input value="@ViewBag.maloauto" name="malo" class="form-control" style="width:130px;margin:0 16px" readonly /></p>

                                <label style="margin-left:24px">Số liều/lọ:</label>
                                <p><input value="0" type="number" name="solieu" class="form-control" style="width:145px; margin:0 0px 0 19px" /></p>

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Chỉ thị nhiệt độ:</label>
                                <select class="form-control" name="machithinhietdo" id="machithinhietdo" style="margin:0 18px 0 18px;height:35px;width:175px">
                                    <option value="ctnd001">Tốt</option>
                                    <option value="ctnd003">Bình thường</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style="margin-left:24px; width: 100px;">Đơn giá:</label>
                                <p><input value="0" type="number" name="dongia" class="form-control" style="width:145px;margin-left: -30px;" /></p>

                                <label style=" margin-left:24px;width: 130px; box-sizing:border-box; flex-wrap:nowrap">Số liều nhập:</label>
                                <p><input value="0" name="slnhap" type="number" class="form-control" style="width:130px;margin:0 16px" /></p>

                                <label style="margin-left:24px">Hạn sử dụng:</label>
                                <p><input type="date" name="hsd" class="form-control" style="width:145px; margin:0 41px" /></p>
                                @*@Html.ValidationMessage("HSD", "", "text-danger")*@
                            </div>
                        </div>

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style=" width: 100px; margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Tên vật tư:</label>
                                <p>@Html.DropDownList("mavattu", null, new { @style = "width:130px; margin:0 16px 0 0px", @class = "form-control", @name = "mavattu" })</p>

                                <label style="width: 130px;margin-left:24px">Ngày sản xuất:</label>
                                <p><input type="date" name="nsx" class="form-control" style="width:145px; margin-left: 0px;" /></p>
                                @*@Html.ValidationMessage("NSX", "", "text-danger")*@

                                <label style=" margin-left:7px;width: 140px; box-sizing:border-box; flex-wrap:nowrap">Chỉ thị đông băng:</label>
                                <select class="form-control" name="machithidongbang" id="machithidongbang" style="margin: 0 18px 0 18px;height: 35px;width: 175px">
                                    <option value="ctdb001">Tốt</option>
                                    <option value="ctdb003">Bình thường</option>
                                </select>
                            </div>
                        </div>

                        <div class="panel-heading" style="color:blue; font-size:large;display: flex; height: 60px;background-color: #E9EBEE;
                        align-items: center; justify-content: end; margin:49px 0 0 0; width:929px">
                            <button id="btnCancel" type="button" class='m-btn m-btn-nobackground'>Hủy</button>
                            <button id="btnSave" type="submit" class="btn btn-primary" style=" margin:0 24px 0 8px">Thêm mới</button>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>

</body>

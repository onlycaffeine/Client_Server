@model Model1.EF.Phieuxuat
@{
    ViewBag.Title = "Index";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Nhập từ nhà cung cấp
}



@using (Html.BeginForm("Edithd", "Capphat", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.Sophieuxuat)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


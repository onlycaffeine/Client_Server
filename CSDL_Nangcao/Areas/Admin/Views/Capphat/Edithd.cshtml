@model Model1.EF.Phieuxuat
@{
    ViewBag.Title = "Index";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <b class="panel-heading" style="color:black; font-size:x-large">
        Cấp phát vắc xin/Vật tư
    </b>
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/thuan-main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
</head>

<body>
    <div class="row">

        <div class="col-lg-pull-3 thuan-body-content">
            @using (Html.BeginForm("Edithd", "Capphat", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(Model => Model.Sophieuxuat)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-horizontal" style="width:340px">
                    <b class="panel-heading" style="color:coral; font-size:large">Thông tin phiếu xuất</b>

                    @*<p>
                        <button type="submit" title="Xuất pdf" class="btn btn-primary" style="margin: -49px 0 0px 222px;">
                            <b style="font-size: 14px;
                             margin-left: 5px"> Xuất pdf</b>
                        </button>
                    </p>*@

                    <hr style="margin:-14px 0 14px 0" />

                    <div class="form-group">
                        <label class="lable-thuan">Số phiếu xuất</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Sophieuxuat, new { htmlAttributes = new { @class = "form-control" } }) @*, @readonly = "readonly"*@
                            @Html.ValidationMessageFor(model => model.Sophieuxuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Tên điểm tiêm</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Madiemtiem, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Madiemtiem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Kho xuất</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Makhoxuat, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Makhoxuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Trạng thái</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Matinhtrang, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Matinhtrang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Ngày xuất</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ngayxuat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ngayxuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-primary" style=" margin:10px 0 0 0" />
                            </div>

                        </div>*@
                </div>
            }

        </div>
    </div>
    <div style="margin-top:13px">
        @Html.ActionLink("Quay lại phiếu cấp phát", "Index")
    </div>
</body>
</html>
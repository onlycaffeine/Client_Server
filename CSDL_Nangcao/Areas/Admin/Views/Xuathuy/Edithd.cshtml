@model Model1.EF.Phieuxuathuy
@{
    ViewBag.Title = "Index";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <b class="panel-heading" style="color:black; font-size:x-large">
        Phiếu xuất hủy
    </b>
}
<html>
<head>
    <link rel="stylesheet" href="~/Assets/Admin/css/thuan-main.css">
</head>
<body>

    <div class="row">

        <div class="col-lg-pull-3 thuan-body-content">


            @using (Html.BeginForm("Edithd", "Xuathuy", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(Model => Model.Sophieuxuat)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-horizontal" style="width:340px">
                    <b class="panel-heading" style="color:coral; font-size:large">
                        Cập nhật phiếu xuất hủy
                    </b>
                    <hr />

                    <div class="form-group">
                        <label class="lable-thuan">Số phiếu xuất hủy</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Sophieuxuat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Sophieuxuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Ngày xuất</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ngayxuat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Ngayxuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan">Ghi chú</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ghichu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ghichu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-primary" style=" margin:10px 0 0 0" />
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>

    <div>
        @Html.ActionLink("Quay lại phiếu hủy", "Index")
    </div>
</body>
</html>
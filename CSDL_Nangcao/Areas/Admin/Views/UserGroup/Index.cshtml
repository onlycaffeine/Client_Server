<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
</head>

<body>
    <div class="row">

        <div class="col-lg-12 thuan-body-content">

            <div class="panel panel-default">
                <b class="panel-heading" style="color:coral; font-size:large">
                    Danh sách nhóm người dùng
                </b>
                <hr>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "UserGroup", FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row form-group" style="display:flex">
                            <div class="col-lg-12" style="display:flex">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Tìm kiếm theo tên nhóm" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Tìm kiếm</b>
                                    </button>
                                    <a class="btn btn-primary" id="btnAddEmployee" href="#">
                                        <i class="fas fa-plus"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Thêm mới</b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>Mã nhóm</th>
                                    <th>Tên nhóm</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.Manhomnv">

                                        <td>@item.Manhomnv</td>
                                        <td>@item.Tennhomnv </td>
                                        <td style="text-align: center">
                                            <a title="Cập nhật" href="/Admin/UserGroup/Edit/@item.Manhomnv"><i class="fas fa-pen" style="margin-right:5px"></i></a>|
                                            @Ajax.ActionLink(" ", "Delete", new { @id = item.Manhomnv }, new AjaxOptions
                                            { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Manhomnv + "').remove()", },
                                            new { @class = "fas fa-trash", @title = "Xóa" })
                                            |<a title="Chi tiết" href="/Admin/User/Detail/@item.Manhomnv"><i class="fas fa-info-circle" style="margin-left:5px"></i></a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>

    <div id="dlgPopup" class="m-dialog">
        <div class="m-row">
            <div class="m-popup" style="height: 267px; width: 700px ">
                <div class="m-popup-header">
                    <div class="m-popup-header-title">Đóng Form thông tin chung</div>
                    <div id="btnCloseDialog" class="m-popup-close"><i class="fas fa-times"></i></div>
                    <hr />
                </div>
                <div class="m-popup-content">
                    @using (Html.BeginForm("Create", "UserGroup", FormMethod.Post, new { style = " width: 698px" }))
                    {
                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Mã nhóm:</label>
                                <p><input name="maphieu" class="form-control" style="width:130px;margin:0 16px" /></p>

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Tên nhóm:</label>
                                <p><input name="tennv" class="form-control" style="width:130px;margin:0 16px" /></p>
                            </div>
                        </div>

                        @*<div class="form-group" style="">
                                <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                    <label style="margin-left:24px">Ngày sinh:</label>
                                    <p><input type="date" name="ngaynhap" class="form-control" style="width:145px; margin:0 41px" /></p>
                                    <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Số điện thoại:</label>
                                    <p><input name="sdt" class="form-control" style="width:130px;margin:0 16px" /></p>
                                </div>
                            </div>*@

                        <div class="panel-heading" style="color:blue; font-size:large;display: flex; height: 60px;background-color: #E9EBEE;
                        align-items: center; justify-content: end; margin:49px 0 0 0; width:699px">
                            <button id="btnCancel" type="button" class='m-btn m-btn-nobackground'>Hủy</button>
                            <button id="btnSave" type="submit" class="btn btn-primary" style=" margin:0 24px 0 8px">Thêm mới</button>
                        </div>

                    }

                </div>
                @*<div class="m-popup-footer">
                        <button id="btnCancel" class='m-btn m-btn-nobackground'>Hủy</button>
                        <button id="btnSave" class='m-btn'>Lưu</button>
                    </div>*@
            </div>
        </div>
    </div>
</body>
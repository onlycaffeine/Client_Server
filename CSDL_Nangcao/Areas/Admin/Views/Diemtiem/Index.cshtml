@section jsFooter{
    <script src="~/Assets/Admin/js/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/Admin/css/lib/combobox.js"></script>
    <script src="~/Assets/Admin/js/controller/DiemtiemController.js"></script>
    <script src="~/assets/Client/js/pageuser.js"></script>

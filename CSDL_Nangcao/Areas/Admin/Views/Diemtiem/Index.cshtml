<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
</head>

<body>
    <div class="row">

        <div class="col-lg-12 thuan-body-content">

            <div class="panel panel-default">
                <b class="panel-heading" style="color:coral; font-size:large">
                    Danh sách điểm tiêm
                </b>
                <hr>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Diemtiem", FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row form-group" style="display:flex">
                            <div class="col-lg-12" style="display:flex">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString1" class="form-control" name="searchString1" placeholder="Tìm kiếm theo tên điểm tiêm" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Tìm kiếm</b>
                                    </button>
                                    <a class="btn btn-primary" id="btnAddEmployee" href="#">
                                        <i class="fas fa-plus"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Thêm mới</b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }


                    @using (Html.BeginForm("MultiDelete", "Diemtiem", FormMethod.Post))
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã điểm tiêm</th>
                                        <th>Tên điểm tiêm</th>
                                        <th>Tên người đứng đầu</th>
                                        <th>Trạng thái</th>
                                        <th>Phường</th>
                                        <th>Quận</th>
                                        <th>Thành phố</th>
                                        <th>Số bàn tiêm</th>
                                        <th>Địa chỉ</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@{int i = 0;}*@
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.Madiemtiem">
                                            @*@{ViewBag.arr[i] = @item.Manhanvien; i += 1;}*@
                                            <td>@item.Madiemtiem</td>
                                            <td>@item.Tendiemtiem </td>
                                            <td>@item.Tennguoidungdau</td>
                                            <td><a href="#" class="btn-active" data-id="@item.Madiemtiem">@Html.Raw(item.Trangthai ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                            <td>@item.Tenphuong</td>
                                            <td>@item.Tenquan</td>
                                            <td>@item.Tenthanhpho</td>
                                            <td>@item.Sobantiem </td>
                                            <td>@item.Diachi</td>
                                            <td style="text-align: center">
                                                <a title="Cập nhật" href="/Admin/Diemtiem/Edit/@item.Madiemtiem"><i class="fas fa-pen" style="margin-right:5px"></i></a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>

                        @*<input type="submit" value="Xóa bản ghi đã chọn" style="" />*@
                    }
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>

    <div id="dlgPopup" class="m-dialog">
        <div class="m-row">
            <div class="m-popup" style="height: 375px; width: 805px ">
                <div class="m-popup-header">
                    <div class="m-popup-header-title">Đóng Form thông tin chung</div>
                    <div id="btnCloseDialog" class="m-popup-close"><i class="fas fa-times"></i></div>
                    <hr />
                </div>
                <div class="m-popup-content">
                    @using (Html.BeginForm("Create", "Diemtiem", FormMethod.Post, new { style = " width: 837px" }))
                    {
                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Tên điểm tiêm:</label>
                                <p><input name="tendt" class="form-control" style="width:170px;margin:0 16px" /></p>

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Tên người đứng đầu:</label>
                                <p><input name="ndd" class="form-control" style="width:170px;margin:0 16px" /></p>

                            </div>
                        </div>

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Số bàn tiêm:</label>
                                <p><input name="sbt" type="number" class="form-control" style="width:130px;margin:0 16px" /></p>

                                <label style=" margin-left:24px;margin-right: 32px; box-sizing:border-box; flex-wrap:nowrap">Địa chỉ:</label>
                                <p><input name="diachi" class="form-control" style="width:313px;margin:0 16px" /></p>

                                <p><input value="true" name="trangthai" id="trangthai" class="form-control" style="display:none" /></p>
                            </div>
                        </div>

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;margin-left:0px;  width:100%;align-items:center">
                                <label style=" margin-left:24px;margin-right:37px; box-sizing:border-box; flex-wrap:nowrap">Khu vực:</label>

                                <select class="form-control" name="tp" id="tp" style="height:35px;width:175px; margin-right:36px">
                                    <option value="" selected="selected">Tỉnh/Thành phố</option>
                                </select>
                                <br><br>
                                <select class="form-control" name="q" id="q" style="margin-right:36px;height:35px;width:175px">
                                    <option value="" selected="selected">Quận/Huyện</option>
                                </select>
                                <br><br>
                                <select class="form-control" name="p" id="p" style="margin-right:0px;height:35px;width:175px">
                                    <option value="" selected="selected">Phường/Thị xã</option>
                                </select>
                                <br><br>
                            </div>
                        </div>

                        <div class="panel-heading" style="color:blue; font-size:large;display: flex; height: 60px;background-color: #E9EBEE;
                        align-items: center; justify-content: end; margin:35px 0 0 0; width:804px">
                            <button id="btnCancel" type="button" class='m-btn m-btn-nobackground'>Hủy</button>
                            <button id="btnSave" type="submit" class="btn btn-primary" style=" margin:0 24px 0 8px">Thêm mới</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</body>
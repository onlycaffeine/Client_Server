<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
</head>

<body>
    <div class="row">

        <div class="col-lg-12 thuan-body-content">

            <div class="panel panel-default">
                <b class="panel-heading" style="color:coral; font-size:large">
                    Danh sách vật tư
                </b>
                <hr>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Vattuyte", FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row form-group" style="display:flex">
                            <div class="col-lg-12" style="display:flex">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString1" class="form-control" name="searchString1" placeholder="Tìm kiếm theo tên vật tư" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Tìm kiếm</b>
                                    </button>
                                    <a class="btn btn-primary" id="btnAddEmployee" href="#">
                                        <i class="fas fa-plus"></i><b style="font-size: 14px;
                            margin-left: 5px;"> Thêm mới</b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }


                    @*@using (Html.BeginForm("MultiDelete", "User", FormMethod.Post))
                    {*@
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã vật tư</th>
                                        <th>Tên vật tư</th>
                                        <th>Tên loại vật tư</th>
                                        <th>Trạng thái</th>
                                        <th>Nhà sản xuất</th>
                                        <th>Xuất xứ</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@{int i = 0;}*@
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.Mavattu">
                                            <td>@item.Mavattu</td>
                                            <td>@item.Tenvattu </td>
                                            <td>@item.Tenloaivattu</td>
                                            <td><a href="#" class="btn-active" data-id="@item.Mavattu">@Html.Raw(item.Trangthai ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                            <td>@item.Tennsx</td>
                                            <td>@item.Xuatxu</td>
                                            <td style="text-align: center">
                                                <a title="Cập nhật" href="/Admin/Vattuyte/Edit/@item.Mavattu"><i class="fas fa-pen" style="margin-right:5px"></i></a>
                                                @*@Ajax.ActionLink(" ", "Deletehd", new { @id = item.Manhanvien }, new AjaxOptions
                                                    { HttpMethod = "Delete", Confirm = "Bạn có muốn xoá bản ghi này?", OnComplete = "$('#row_" + @item.Manhanvien + "').remove()", },
                                                    new { @class = "fas fa-trash", @title = "Xóa" })*@
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>
                    @*}*@
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>

    <div id="dlgPopup" class="m-dialog">
        <div class="m-row">
            <div class="m-popup" style="height: 253px; width: 805px ">
                <div class="m-popup-header">
                    <div class="m-popup-header-title">Đóng Form thông tin chung</div>
                    <div id="btnCloseDialog" class="m-popup-close"><i class="fas fa-times"></i></div>
                    <hr />
                </div>
                <div class="m-popup-content">
                    @using (Html.BeginForm("Create", "Vattuyte", FormMethod.Post, new { style = " width: 837px" }))
                    {

                        <div class="form-group" style="">
                            <div class="form-group" style="display: flex ;  width:100%;align-items:center">
                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Tên vật tư:</label>
                                <p><input name="tennv" class="form-control" style="width:130px;margin:0 16px" /></p>

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Loại vật tư:</label>
                                <p>@Html.DropDownList("lvt", null, new { @style = "width:130px; margin:0 16px 0 8px", @class = "form-control", @name = "lvt" })</p>

                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Nhà sản xuất:</label>
                                <p>@Html.DropDownList("nsx", null, new { @style = "width:130px; margin:0 16px 0 8px", @class = "form-control", @name = "nsx" })</p>

                            </div>
                        </div>

                        <div class="panel-heading" style="color:blue; font-size:large;display: flex; height: 60px;background-color: #E9EBEE;
                        align-items: center; justify-content: end; margin:35px 0 0 0; width:804px">
                            <button id="btnCancel" type="button" class='m-btn m-btn-nobackground'>Hủy</button>
                            <button id="btnSave" type="submit" class="btn btn-primary" style=" margin:0 24px 0 8px">Thêm mới</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</body>
@model IEnumerable<Model1.DTO.LoDTO>
@{
    ViewBag.Title = "Index11";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách tồn kho
}

<div class="row">

    <div class="col-lg-pull-3" style="padding:10px">

        <div class="section group">
            <b class="panel-heading" style="color:black; font-size:large">
                Danh sách lô/ Vật tư
                @*<a class="btn btn-primary" href="/Admin/Lo/Create" style=" margin:0 0 0 36px">Danh sách lô đã xuất nhưng chưa nhập kho</a>*@
            </b>
            <hr />

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>Mã lô</td>
                            <td>Mã vật tư</td>
                            <td>Tên vật tư</td>
                            <td>Số liều trên lọ</td>
                            <td>Số lượng tồn</td>
                            <td>Tên kho chứa</td>
                            <td>Đơn giá</td>
                            <td>Thành tiền</td>
                            @*<td></td>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.Where(item => item != null))
                            {
                                <tr>
                                    <td>@item.Malo</td>
                                    <td>@item.Mavattu</td>
                                    <td>@item.Tenvattu</td>
                                    <td>@item.Solieutrenmotcai.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@item.SLnhap.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@item.Tenkho</td>
                                    <td>@item.Dongia.GetValueOrDefault(0).ToString("N0")</td>
                                    <td>@((item.Dongia.GetValueOrDefault(0) * item.SLnhap.GetValueOrDefault(0)).ToString("N0"))</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

            </div>
        </div>
        <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

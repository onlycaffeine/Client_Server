@model Model1.EF.Nhanvien

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <b class="panel-heading" style="color:black; font-size:x-large">
        Quản lý nhân viên
    </b>
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/thuan-main.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/page/user.css">
    <link rel="stylesheet" href="~/Content/themes/base/font/fontawesome-5.15.1/css/all.css">
</head>

<body>
    <div class="row">

        <div class="col-lg-pull-3 thuan-body-content">
            @using (Html.BeginForm("Edit", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(Model => Model.Manhanvien)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="display:flex">
                <div class="form-group">
                    <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Tên nhân viên</label>
                    @Html.EditorFor(model => model.Tennhanvien, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                <div class="form-group">
                    <label class="lable-thuan" style="margin-right: 19px;width: 100px;">SĐT</label>
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Chức vụ</label>
                    @Html.EditorFor(model => model.Manhom, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Manhom } })
                    @*@Html.ValidationMessageFor(model => model.Manhom, "", new { @class = "text-danger" })*@
                </div>

                <div class="form-group">
                    <label class="lable-thuan" style="margin-right: 19px;width: 129px;">Tên Đăng nhập</label>
                    @Html.EditorFor(model => model.Taikhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.Manhom, "", new { @class = "text-danger" })*@
                </div>
            </div>

                <div style="display:flex">
                    <div class="form-group">
                        <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Thành phố</label>
                        @Html.EditorFor(model => model.Manhom, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Matp } })
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Quận</label>
                        @Html.EditorFor(model => model.Manhom, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Maq } })
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Phường</label>
                        @Html.EditorFor(model => model.Manhom, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Map } })
                    </div>

                    <div class="form-group">
                        <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Điểm tiêm</label>
                        @Html.EditorFor(model => model.Manhom, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Madt } })
                    </div>
                    @*if (ViewBag.Maquyen == "w_account")
        {
            <div class="form-group">
                <label class="lable-thuan" style="margin-right: 19px;width: 100px;">Điểm tiêm</label>
                @Html.EditorFor(model => model.Madiemtiem, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Madt } })
            </div>
        }*@

                </div>
            }
        </div>
    </div>
    <div style="margin-top:13px">
        @Html.ActionLink("Quay lại", "Index")
    </div>
</body>
</html>
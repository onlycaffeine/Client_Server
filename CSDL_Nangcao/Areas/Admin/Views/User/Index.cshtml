                                <label style=" margin-left:24px; box-sizing:border-box; flex-wrap:nowrap">Trạng thái:</label>
                                @*<p><input name="trangthai" class="form-control" style="width:130px;margin:0 16px" /></p>*@
                                <select name="trangthai" id="trangthai" style="margin:0 18px 0 18px;height:35px;width:175px">
